source 'git://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'
use_frameworks!
inhibit_all_warnings!

target 'SwipeToRevealExample' do
  pod 'Reveal-SDK', :configurations => ['Debug']
  pod 'SnapKit', '~> 3.0'
  pod 'SwiftLint', '~> 0.16'
end

target 'SwipeToRevealExampleTests' do
  pod 'Quick', '~> 1.1'
  pod 'Nimble', '~> 6.0'
end
